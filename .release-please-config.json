{
  "packages": {
    ".": {
      "release-type": "node",
      "package-name": "datum.net",
      "changelog-path": "CHANGELOG.md",
      "bump-minor-pre-major": true,
      "bump-patch-for-minor-pre-major": true,
      "draft": false,
      "prerelease": false,
      "release-message": "chore: release ${version}\n\n${changelog}",
      "pull-request-title-pattern": "chore: release ${version}",
      "pull-request-header": "## Release ${version}\n\nThis release includes the following changes:\n\n",
      "changelog-sections": [
        {
          "type": "feat",
          "section": "🚀 Features",
          "hidden": true
        },
        {
          "type": "fix",
          "section": "🐛 Bug Fixes",
          "hidden": true
        },
        {
          "type": "docs",
          "section": "📚 Documentation",
          "hidden": true
        },
        {
          "type": "style",
          "section": "💅 Styling",
          "hidden": true
        },
        {
          "type": "refactor",
          "section": "♻️ Refactoring",
          "hidden": true
        },
        {
          "type": "perf",
          "section": "⚡ Performance",
          "hidden": true
        },
        {
          "type": "test",
          "section": "🧪 Testing",
          "hidden": true
        },
        {
          "type": "build",
          "section": "👷 Build",
          "hidden": true
        },
        {
          "type": "ci",
          "section": "⚙️ CI",
          "hidden": true
        },
        {
          "type": "chore",
          "section": "🔧 Chores",
          "hidden": true
        },
        {
          "type": "revert",
          "section": "⏪ Reverts",
          "hidden": true
        }
      ],
      "include-component-in-tag": false,
      "include-v-in-tag": true,
      "changelog-type": "github",
      "commit-search-depth": 100,
      "monorepo-tags": true,
      "release-label": "release-please",
      "release-lookup-name": "release-please",
      "version-file": "package.json"
    }
  },
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json"
}
