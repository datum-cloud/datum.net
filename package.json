{
  "name": "datum.net",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "astro dev --typecheck",
    "start": "astro dev",
    "build": "astro check && astro build",
    "preview": "astro preview",
    "astro": "astro",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx,.astro,.md,.mdx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx,.astro,.md,.mdx --fix",
    "lint:md": "npx markdownlint-cli \"src/content/**/*.{md,mdx}\"",
    "lint:md:fix": "npx markdownlint-cli \"src/content/**/*.{md,mdx}\" --fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,astro,md,mdx,json,css,scss}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,astro,md,mdx,json,css,scss}\"",
    "prepare": "husky",
    "typecheck": "astro check"
  },
  "dependencies": {
    "@astrojs/mdx": "^4.2.3",
    "@astrojs/sitemap": "^3.3.0",
    "@astrojs/ts-plugin": "^1.10.4",
    "@nanostores/persistent": "^0.10.2",
    "@tailwindcss/typography": "^0.5.16",
    "@tailwindcss/vite": "^4.1.3",
    "astro": "^5.6.1",
    "astro-robots-txt": "^1.0.0",
    "astro-seo": "^0.8.4",
    "mermaid": "^11.5.0",
    "nanostores": "^0.11.4",
    "remark-mermaidjs": "^7.0.0",
    "tailwindcss": "^4.1.3",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.24.0",
    "@types/node": "^22.14.0",
    "@typescript-eslint/eslint-plugin": "^8.29.0",
    "@typescript-eslint/parser": "^8.29.0",
    "eslint": "^9.24.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-astro": "^1.3.1",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-mdx": "^3.4.0",
    "eslint-plugin-prettier": "^5.2.3",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.0",
    "markdownlint-cli": "^0.44.0",
    "prettier": "^3.5.3",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "typescript": "^5.8.3"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-arm64-gnu": "4.40.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,astro}": [
      "npm run typecheck",
      "npm run lint",
      "npm run lint:fix",
      "npm run format:check",
      "npm run format"
    ],
    "*.{md,mdx}": [
      "npm run lint:md",
      "npm run lint:md:fix"
    ],
    "*.{json,css,scss}": [
      "npm run format:check",
      "npm run format"
    ]
  }
}
