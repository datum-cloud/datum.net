{
  "name": "datum.net",
  "type": "module",
  "private": true,
  "scripts": {
    "build:pagefind": "npx pagefind",
    "copy:pagefind": "npx shx cp -r dist/pagefind public/",
    "dev:astro": "astro dev --host --typecheck",
    "build:astro": "astro check --skip-playwright && astro build",
    "dev": "npm run dev:astro && npm run build:pagefind && npm run copy:pagefind",
    "build": "npm run build:astro && npm run build:pagefind",
    "start": "node ./dist/server/entry.mjs",
    "preview": "astro preview",
    "astro": "astro",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx,.astro,.md,.mdx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx,.astro,.md,.mdx --fix",
    "lint:md": "npx markdownlint-cli \"src/content/**/*.{md,mdx}\"",
    "lint:md:fix": "npx markdownlint-cli \"src/content/**/*.{md,mdx}\" --fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,astro,md,mdx,json,css,scss}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,astro,md,mdx,json,css,scss}\"",
    "prepare": "husky",
    "typecheck": "astro check",
    "precommit": "npm run typecheck && npm run lint && npm run lint:md && npm run lint:md:fix && npm run format && npm run format:check",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report"
  },
  "dependencies": {
    "@alpinejs/collapse": "^3.14.9",
    "@astrojs/alpinejs": "^0.4.8",
    "@astrojs/mdx": "^4.3.0",
    "@astrojs/node": "^9.2.2",
    "@astrojs/sitemap": "^3.4.1",
    "@astrojs/starlight": "^0.34.3",
    "@astrojs/ts-plugin": "^1.10.4",
    "@nanostores/persistent": "^1.0.0",
    "@tailwindcss/typography": "^0.5.16",
    "@tailwindcss/vite": "^4.1.10",
    "@types/alpinejs": "^3.13.11",
    "alpinejs": "^3.14.9",
    "astro": "^5.9.2",
    "astro-robots-txt": "^1.0.0",
    "astro-seo": "^0.8.4",
    "mdast-util-to-string": "^4.0.0",
    "mermaid": "^11.6.0",
    "nanostores": "^1.0.1",
    "octokit": "^5.0.3",
    "reading-time": "^1.5.0",
    "tailwindcss": "^4.1.10",
    "uninstall": "^0.0.0",
    "zod": "^3.25.62"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.28.0",
    "@playwright/test": "^1.53.0",
    "@types/alpinejs__collapse": "^3.13.4",
    "@types/node": "^22.15.31",
    "@types/pg": "^8.15.4",
    "@typescript-eslint/eslint-plugin": "^8.34.0",
    "@typescript-eslint/parser": "^8.34.0",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-astro": "^1.3.1",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-mdx": "^3.4.2",
    "eslint-plugin-prettier": "^5.4.1",
    "globals": "^16.2.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.0",
    "markdownlint-cli": "^0.45.0",
    "pagefind": "^1.3.0",
    "prettier": "^3.5.3",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-tailwindcss": "^0.6.12",
    "typescript": "^5.8.3"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-arm64-gnu": "4.43.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,astro}": [
      "npm run typecheck",
      "npm run lint",
      "npm run lint:fix",
      "npm run format:check",
      "npm run format"
    ],
    "*.{md,mdx}": [
      "npm run lint:md",
      "npm run lint:md:fix"
    ],
    "*.{json,css,scss}": [
      "npm run format:check",
      "npm run format"
    ]
  },
  "version": "1.0.0"
}
