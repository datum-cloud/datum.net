{
  "name": "datum-astro-mdx-website",
  "type": "module",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx,.astro",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx,.astro --fix",
    "lint:md": "npx markdownlint-cli \"src/content/**/*.{md,mdx}\"",
    "lint:md:fix": "npx markdownlint-cli \"src/content/**/*.{md,mdx}\" --fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,astro,md,mdx,json,css,scss}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,astro,md,mdx,json,css,scss}\"",
    "prepare": "husky"
  },
  "dependencies": {
    "@astrojs/mdx": "^4.2.1",
    "@astrojs/sitemap": "^3.3.0",
    "@astrojs/ts-plugin": "^1.10.4",
    "@astrojs/vercel": "^8.1.2",
    "@nanostores/persistent": "^0.10.2",
    "@tailwindcss/typography": "^0.5.16",
    "@tailwindcss/vite": "^4.0.14",
    "astro": "^5.5.3",
    "astro-robots-txt": "^1.0.0",
    "astro-seo": "^0.8.4",
    "mermaid": "^11.5.0",
    "nanostores": "^0.11.4",
    "remark-mermaidjs": "^7.0.0",
    "tailwindcss": "^4.0.14",
    "typescript": "^5.8.2",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.0",
    "@eslint/js": "^9.22.0",
    "@typescript-eslint/eslint-plugin": "^8.27.0",
    "@typescript-eslint/parser": "^8.27.0",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-astro": "^1.3.1",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.2.3",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.0",
    "markdownlint-cli": "^0.44.0",
    "prettier": "^3.5.3",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-tailwindcss": "^0.6.11"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,astro}": [
      "npx eslint --fix",
      "npx prettier --write"
    ],
    "*.{md,mdx}": [
      "npx prettier --write",
      "npx markdownlint-cli --fix"
    ],
    "*.{json,css,scss}": [
      "npx prettier --write"
    ]
  }
}
