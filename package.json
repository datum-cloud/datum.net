{
  "name": "datum-astro-mdx-website",
  "type": "module",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "tina:dev": "npx tinacms dev -c \"npm run dev\"",
    "tina:build": "tinacms build && astro build",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx,.astro",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx,.astro --fix",
    "lint:md": "npx markdownlint-cli \"src/content/**/*.{md,mdx}\"",
    "lint:md:fix": "npx markdownlint-cli \"src/content/**/*.{md,mdx}\" --fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,astro,md,mdx,json,css,scss}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,astro,md,mdx,json,css,scss}\"",
    "prepare": "husky install"
  },
  "dependencies": {
    "@astrojs/mdx": "^4.1.0",
    "@astrojs/sitemap": "^3.2.1",
    "@astrojs/starlight": "^0.32.2",
    "@astrojs/svelte": "^7.0.5",
    "@astrojs/tailwind": "^6.0.0",
    "@astrojs/ts-plugin": "^1.10.4",
    "@astrojs/vercel": "^8.1.1",
    "@nanostores/persistent": "^0.10.2",
    "@shopify/hydrogen-react": "^2025.1.2",
    "@tailwindcss/typography": "^0.5.16",
    "@tinacms/cli": "^1.9.2",
    "astro": "^5.4.2",
    "astro-robots-txt": "^1.0.0",
    "astro-seo": "^0.8.4",
    "mermaid": "^11.4.1",
    "nanostores": "^0.11.4",
    "remark-mermaidjs": "^7.0.0",
    "svelte": "^5.22.5",
    "tailwindcss": "^3.3.3",
    "tinacms": "^2.7.2",
    "typescript": "^5.8.2",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-astro": "^0.31.4",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.0",
    "markdownlint-cli": "^0.39.0",
    "prettier": "^3.2.5",
    "prettier-plugin-astro": "^0.13.0",
    "prettier-plugin-tailwindcss": "^0.5.11"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,astro}": [
      "npx eslint --fix",
      "npx prettier --write"
    ],
    "*.{md,mdx}": [
      "npx prettier --write",
      "npx markdownlint-cli --fix"
    ],
    "*.{json,css,scss}": [
      "npx prettier --write"
    ]
  }
}
