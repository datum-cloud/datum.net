---
import navData from '@data/navigation.json';
const today = new Date();
const { social } = navData;
---

<footer class="bg-dark mt-auto text-white">
  <div class="container mx-auto px-4 py-8">
    <div class="grid grid-cols-1 gap-8 md:grid-cols-3">
      <div>
        <p>
          &copy; {today.getFullYear()} Datum Inc. Site. All rights reserved.
        </p>
      </div>

      <div>
        <h3 class="mb-4 text-lg font-bold">Connect</h3>
        <ul class="space-y-2">
          {
            social.map((link) => (
              <li>
                <a
                  href={link.href}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="hover:text-blackberry text-gray-400 transition-colors"
                >
                  {link.text}
                </a>
              </li>
            ))
          }
        </ul>
      </div>
    </div>
  </div>
</footer>
