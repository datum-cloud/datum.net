---
import Nav from './Nav.astro';
import navData from '../data/navigation.json';
const today = new Date();
const { social } = navData;
---

<footer class="bg-dark text-white mt-auto">
  <div class="container mx-auto px-4 py-8">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <div>
        <h3 class="text-lg font-bold mb-4">Datum Inc. Site</h3>
        <p>&copy; {today.getFullYear()} Datum Inc. Site. All rights reserved.</p>
      </div>
      
      <div>
        <h3 class="text-lg font-bold mb-4">Links</h3>
        <Nav location="footer" classList="flex flex-col space-y-2" />
      </div>
      
      <div>
        <h3 class="text-lg font-bold mb-4">Connect</h3>
        <ul class="space-y-2">
          {social.map(link => (
            <li>
              <a 
                href={link.href} 
                target="_blank" 
                rel="noopener noreferrer"
                class="text-gray-300 hover:text-white transition-colors"
              >
                {link.text}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>
    
    <div class="mt-8 pt-8 border-t border-gray-700 text-center text-sm text-gray-400">
      <p>Built with Astro, MDX, and TailwindCSS</p>
    </div>
  </div>
</footer>