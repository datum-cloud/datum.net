---
import Nav from "./Nav.astro";
import navData from "@data/navigation.json";
const today = new Date();
const { social } = navData;
---

<footer class="mt-auto bg-dark text-white">
  <div class="container mx-auto px-4 py-8">
    <div class="grid grid-cols-1 gap-8 md:grid-cols-3">
      <div>
        <h3 class="mb-4 text-lg font-bold">Datum Inc. Site</h3>
        <p>
          &copy; {today.getFullYear()} Datum Inc. Site. All rights reserved.
        </p>
      </div>

      <div>
        <h3 class="mb-4 text-lg font-bold">Links</h3>
        <Nav location="footer" classList="flex flex-col space-y-2" />
      </div>

      <div>
        <h3 class="mb-4 text-lg font-bold">Connect</h3>
        <ul class="space-y-2">
          {
            social.map((link) => (
              <li>
                <a
                  href={link.href}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="text-gray-300 transition-colors hover:text-white"
                >
                  {link.text}
                </a>
              </li>
            ))
          }
        </ul>
      </div>
    </div>

    <div class="mt-8 border-t border-gray-700 pt-8 text-center text-sm text-gray-400">
      <p>Built with Astro, MDX, and TailwindCSS</p>
    </div>
  </div>
</footer>
