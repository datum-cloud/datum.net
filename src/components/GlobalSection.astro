---
import { Image } from 'astro:assets';
import { getEntry } from 'astro:content';
import ImageConsole from '@v1/assets/images/console.png';

const content = await getEntry('pages', 'global-section');
---

<section
  class="bg-lime-green section--block section--block--big-pad flex pt-19 pb-0 align-middle md:pt-[10%]"
>
  <div class="flex w-full flex-col items-center gap-12 align-middle md:gap-6">
    <div class="z-50 mx-auto max-w-2xl text-center">
      <h2 class="h2-leading">{content?.data.title}</h2>
      <div class="text-desc mx-auto mt-8 max-w-3xl md:mt-12">
        <p>{content?.body}</p>
      </div>
    </div>

    <div class="z-0 flex w-full max-w-[1416px] items-end pl-6 opacity-80 md:px-18">
      <Image
        src={ImageConsole}
        alt="Scene left illustration"
        class="relative mr-auto min-h-[248px] max-w-[700px] md:min-h-0 md:max-w-full md:-translate-0 md:translate-x-0 md:translate-y-14"
      />
    </div>
  </div>
</section>
