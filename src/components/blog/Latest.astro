---
import { getCollection } from 'astro:content';
import { Image } from 'astro:assets';
import { formatShortDate } from '@utils/dateUtils';

// Get the 3 latest published blog posts
const blogs = await getCollection('blog', ({ data }) => {
  return !data.draft;
});

// Sort by date (newest first) and take the first 3
blogs.sort((a, b) => {
  return new Date(b.data.date).getTime() - new Date(a.data.date).getTime();
});

const latestBlogs = blogs.slice(0, 3);
const [featured, ...posts] = latestBlogs;
---

<h2
  class="datum-text-xl border-midnight-fjord m-0 mb-8 w-full border-b pb-6 md:mb-12 lg:mb-16 lg:pb-8"
>
  Latest thoughts from the team
</h2>

<div class="grid grid-cols-4 gap-8 md:grid-cols-11 lg:flex-row lg:gap-11">
  {
    featured && (
      <div class="col-span-4 flex flex-1 flex-col md:col-span-5 lg:col-span-6">
        <div class="flex flex-col">
          {featured.data.thumbnail && (
            <a href={`/blog/${featured.id}/`} title={featured.data.title} class="mb-6 w-full">
              <Image
                layout="constrained"
                src={featured.data.thumbnail}
                alt={featured.data.title}
                class="block size-auto w-full rounded-[4px] object-cover"
              />
            </a>
          )}

          <h3 class="datum-text-2xl mb-3 font-medium">
            <a
              href={`/blog/${featured.id}/`}
              title={featured.data.title}
              class="transition-opacity duration-200 hover:opacity-70"
            >
              {featured.data.title}
            </a>
          </h3>
          {featured.data.description && (
            <p class="datum-text-base mb-3 text-pretty opacity-80">{featured.data.description}</p>
          )}
          <div>
            <time datetime={featured.data.date.toISOString()} class="datum-text-sm opacity-40">
              {formatShortDate(featured.data.date)}
            </time>
          </div>
        </div>
      </div>
    )
  }

  <div class="col-span-4 flex gap-6 md:col-span-6 md:gap-8 lg:col-span-5 lg:gap-11">
    {
      posts.map((post) => (
        <div class="flex flex-1 flex-col">
          {post.data.thumbnail && (
            <a href={`/blog/${post.id}/`} title={post.data.title} class="mb-6 w-full">
              <Image
                layout="constrained"
                src={post.data.thumbnail}
                alt={post.data.title}
                class="block size-auto w-full rounded-[4px] object-cover"
              />
            </a>
          )}

          <h4 class="datum-text-xl mb-3 font-medium">
            <a
              href={`/blog/${post.id}/`}
              title={post.data.title}
              class="transition-opacity duration-200 hover:opacity-70"
            >
              {post.data.title}
            </a>
          </h4>
          {post.data.description && (
            <p class="datum-text-sm mb-3 text-pretty opacity-80">{post.data.description}</p>
          )}
          <div>
            <time datetime={post.data.date.toISOString()} class="datum-text-sm opacity-40">
              {formatShortDate(post.data.date)}
            </time>
          </div>
        </div>
      ))
    }
  </div>
</div>
