---
import { getCollection } from 'astro:content';
import { Image } from 'astro:assets';
import { formatShortDate } from '@utils/dateUtils';

// Get the 7 latest published blog posts
const blogs = await getCollection('blog', ({ data }) => {
  return !data.draft;
});

// Sort by date (newest first) and take the first 7
blogs.sort((a, b) => {
  return new Date(b.data.date).getTime() - new Date(a.data.date).getTime();
});

const latestBlogs = blogs.slice(0, 7);
const [largeFeatured, mediumFeatured, ...smallPosts] = latestBlogs;
---

<h2
  class="datum-text-xl border-midnight-fjord m-0 mb-8 w-full border-b pb-6 md:mb-12 lg:mb-16 lg:pb-8"
>
  Latest thoughts from the team
</h2>

<!-- Row 1: Featured posts -->
<div class="mb-6 grid grid-cols-4 gap-6 md:mb-8 md:grid-cols-11 md:gap-8 lg:gap-9">
  {
    largeFeatured && (
      <div class="col-span-4 flex flex-1 flex-col md:col-span-7">
        <div class="flex flex-col">
          {largeFeatured.data.thumbnail && (
            <a
              href={`/blog/${largeFeatured.id}/`}
              title={largeFeatured.data.title}
              class="mb-6 w-full"
            >
              <Image
                layout="constrained"
                src={largeFeatured.data.thumbnail}
                alt={largeFeatured.data.title}
                class="block size-auto w-full rounded-[4px] object-cover"
              />
            </a>
          )}

          <h3 class="datum-text-2xl mb-3 font-medium">
            <a
              href={`/blog/${largeFeatured.id}/`}
              title={largeFeatured.data.title}
              class="transition-opacity duration-200 hover:opacity-70"
            >
              {largeFeatured.data.title}
            </a>
          </h3>
          {largeFeatured.data.description && (
            <p class="datum-text-base mb-3 text-pretty opacity-80">
              {largeFeatured.data.description}
            </p>
          )}
          <div>
            <time datetime={largeFeatured.data.date.toISOString()} class="datum-text-sm opacity-40">
              {formatShortDate(largeFeatured.data.date)}
            </time>
          </div>
        </div>
      </div>
    )
  }

  {
    mediumFeatured && (
      <div class="col-span-4 flex flex-1 flex-col md:col-span-4">
        <div class="flex flex-col">
          {mediumFeatured.data.thumbnail && (
            <a
              href={`/blog/${mediumFeatured.id}/`}
              title={mediumFeatured.data.title}
              class="mb-6 w-full"
            >
              <Image
                layout="constrained"
                src={mediumFeatured.data.thumbnail}
                alt={mediumFeatured.data.title}
                class="block size-auto w-full rounded-[4px] object-cover"
              />
            </a>
          )}

          <h4 class="datum-text-xl mb-3 font-medium">
            <a
              href={`/blog/${mediumFeatured.id}/`}
              title={mediumFeatured.data.title}
              class="transition-opacity duration-200 hover:opacity-70"
            >
              {mediumFeatured.data.title}
            </a>
          </h4>
          {mediumFeatured.data.description && (
            <p class="datum-text-sm mb-3 text-pretty opacity-80">
              {mediumFeatured.data.description}
            </p>
          )}
          <div>
            <time
              datetime={mediumFeatured.data.date.toISOString()}
              class="datum-text-sm opacity-40"
            >
              {formatShortDate(mediumFeatured.data.date)}
            </time>
          </div>
        </div>
      </div>
    )
  }
</div>

<!-- Row 2: Small posts -->
<div class="grid grid-cols-2 gap-4 md:grid-cols-3 md:gap-6 lg:grid-cols-5 lg:gap-6">
  {
    smallPosts.map((post) => (
      <div class="flex flex-1 flex-col">
        {post.data.thumbnail && (
          <a href={`/blog/${post.id}/`} title={post.data.title} class="mb-4 w-full">
            <Image
              layout="constrained"
              src={post.data.thumbnail}
              alt={post.data.title}
              class="block size-auto w-full rounded-[4px] object-cover"
            />
          </a>
        )}

        <h5 class="datum-text-base mb-2 font-medium">
          <a
            href={`/blog/${post.id}/`}
            title={post.data.title}
            class="transition-opacity duration-200 hover:opacity-70"
          >
            {post.data.title}
          </a>
        </h5>
        <div>
          <time datetime={post.data.date.toISOString()} class="datum-text-sm opacity-40">
            {formatShortDate(post.data.date)}
          </time>
        </div>
      </div>
    ))
  }
</div>
