---
// src/components/brand/BrandCardImage.astro
// Card component for brand images with optional link
import type { BrandCardProps } from '@/src/types/brand';

interface Props extends BrandCardProps {
  class?: string;
}

const { url, title, class: className = '' } = Astro.props as Props;
---

<div class={`brand-card-image ${className}`}>
  <div class="brand-card-image--content">
    <slot />
  </div>

  {
    url && (
      <a href={url} class="brand-card-image--link" title={title}>
        {title}
      </a>
    )
  }
</div>
