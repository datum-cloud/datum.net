---
// src/components/career/Benefits.astro
import Icon from '@components/Icon.astro';

const benefits = [
  {
    icon: 'calendar-check-2',
    title: 'Flexible working hours',
    description:
      'While we love to work, a lot happens outside of traditional working hours. We trust our people to show up and get their job doneâ€“ a 9-5 may not work for everyone.',
  },
  {
    icon: 'map-pin',
    title: 'Remote first',
    description:
      "Designed with distributed in mind, we're a global team that spans multiple timezones.",
  },
  {
    icon: 'piggy-bank',
    title: 'Competitive compensation',
    description:
      'Clear bands for salary and equity to ensure our team is aligned and focused on our mission.',
  },
  {
    icon: 'backpack',
    title: 'Flexible PTO',
    description: 'No use it or lose it, take the time you need when you need it.',
  },
  {
    icon: 'scan-heart',
    title: 'Health coverage',
    description:
      'We have a competitive benefits package to make sure you and your family are covered.',
  },
  {
    icon: 'blend',
    title: 'Open & transparent',
    description:
      "From our work in open source to transparent metrics about the company's finances and performance, we're all in it together.",
  },
];
---

<section
  id="benefits"
  class="section--block section--block--pad bg-glacier-mist-700 fade-in--pure"
  data-reveal="fade-in--pure--visible"
  data-reveal-delay="100"
>
  <div class="max-width">
    <h2 class="datum-text-8xl mb-10 text-center font-medium">Open by design</h2>
    <p class="datum-text-lg mb-10 text-center text-pretty md:mb-18">What to expect working here</p>
    <div class="border-midnight-fjord border bg-white p-7 md:p-12 xl:p-16">
      <div class="feature-cards-grid">
        {
          benefits.map((benefit) => (
            <div class="feature-card-item flex flex-row items-start gap-5">
              <div class="iconize">
                <Icon name={benefit.icon} size="md" />
              </div>
              <div class="feature-card-item--content">
                <h3>{benefit.title}</h3>
                <p>{benefit.description}</p>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>
