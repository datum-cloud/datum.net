---
import Layout from './Layout.astro';

export interface Props {
  frontmatter: {
    title: string;
    description?: string;
    publishDate?: string;
  };
}

const { frontmatter } = Astro.props;
---

<Layout title={frontmatter.title} description={frontmatter.description}>
  <article class="prose lg:prose-xl max-w-3xl mx-auto">
    <h1 class="text-4xl font-bold font-heading mb-6">{frontmatter.title}</h1>
    {frontmatter.publishDate && (
      <p class="text-gray-500 mb-6">Published on {frontmatter.publishDate}</p>
    )}
    <div class="mt-8">
      <slot />
    </div>
  </article>
</Layout>