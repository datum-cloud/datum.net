---
import BaseLayout from '@layouts/Layout.astro';
import type { NotFoundProps } from '../types/common';

const { title = 'Page Not Found', message = 'The page you are looking for does not exist.' } =
  Astro.props as NotFoundProps;

Astro.response.status = 404;
---

<BaseLayout title={title}>
  <main class="container mx-auto px-4 py-16 text-center">
    <h1 class="mb-4 text-4xl font-bold">{title}</h1>
    <p class="text-xl text-gray-600">{message}</p>
  </main>
</BaseLayout>
