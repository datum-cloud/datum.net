---
import Layout from '../layouts/Layout.astro';
import { getCollection, getEntry } from 'astro:content';
import { Image } from 'astro:assets';

const page = await getEntry('pages', 'about')
const {Content, headings} = page ? (await page.render()) : null
---

<Layout title=`${page.data.title}` description={page.data.description}>
  <div class="max-w-4xl mx-auto">
    <div class="bg-white rounded-lg shadow-sm p-8 mb-8">
      <h1 class="text-4xl font-bold mb-6 font-heading">About</h1>
      <div class=" overflow-hidden p-4 border border-gray-100 mb-8">  
        <Image src={page.data.featuredImage} alt={page.data.title} />
      </div>
      <div class="prose lg:prose-xl max-w-none">
        <Content />
      </div>
    </div>
    
    <div class="bg-primary/10 rounded-lg p-8 mt-8">
      <h2 class="text-2xl font-bold mb-4 font-heading text-primary">Get In Touch</h2>
      <p class="mb-6">
        Interested in working together or have questions about this website? 
        Feel free to reach out!
      </p>
      <a href="mailto:contact@example.com" class="btn btn-primary">
        Contact Me
      </a>
    </div>
  </div>
</Layout>