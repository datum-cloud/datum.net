---
import Layout from '../layouts/Layout.astro';
import { getEntry } from 'astro:content';
import { Image } from 'astro:assets';

const page = await getEntry('pages', 'about');
const { Content } = page ? await page.render() : null;
---

<Layout title=`${page.data.title}` description={page.data.description}>
  <div class="mx-auto max-w-4xl">
    <div class="mb-8 rounded-lg bg-white p-8 shadow-sm">
      <h1 class="mb-6 font-heading text-4xl font-bold">About</h1>
      <div class="mb-8 overflow-hidden border border-gray-100 p-4">
        <Image src={page.data.featuredImage} alt={page.data.title} />
      </div>
      <div class="prose max-w-none lg:prose-xl">
        <Content />
      </div>
    </div>

    <div class="mt-8 rounded-lg bg-primary/10 p-8">
      <h2 class="mb-4 font-heading text-2xl font-bold text-primary">Get In Touch</h2>
      <p class="mb-6">
        Interested in working together or have questions about this website? Feel free to reach out!
      </p>
      <a href="mailto:contact@example.com" class="btn btn-primary"> Contact Me </a>
    </div>
  </div>
</Layout>
