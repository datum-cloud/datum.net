---
import Layout from '../../layouts/Layout.astro';
import { getEntry, render } from 'astro:content';

const featuresContent = await getEntry('pages', 'features');
if (!featuresContent) {
  return Astro.redirect('/404');
}
const { Content } = await render(featuresContent);
---

<Layout title={featuresContent.data.title}>
  <main class="container mx-auto px-4 py-8">
    <h1 class="mb-6 text-4xl font-bold">Our Platform</h1>
    <div class="prose max-w-none">
      <p>Explore our powerful platform features that make modern infrastructure possible.</p>

      <nav class="mt-8">
        <h2 class="mb-4 text-2xl font-semibold">Core Features</h2>
        <ul class="space-y-2">
          <li>
            <a href="/features/proxy" class="text-blue-600 hover:text-blue-800">Big Ass Proxy</a>
          </li>
          <li>
            <a href="/product/vpc" class="text-blue-600 hover:text-blue-800">Galactic VPC</a>
          </li>
          <li>
            <a href="/features/backbone" class="text-blue-600 hover:text-blue-800"
              >Backbone as Code</a
            >
          </li>
          <li>
            <a href="/features/workloads" class="text-blue-600 hover:text-blue-800"
              >Snoozy Workloads</a
            >
          </li>
          <li>
            <a href="/features/dns" class="text-blue-600 hover:text-blue-800"
              >It's Always F***ING DNS</a
            >
          </li>
        </ul>
      </nav>
    </div>
    <article class="prose max-w-none">
      <Content />
    </article>
  </main>
</Layout>
