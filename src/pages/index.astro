---
import Layout from '@layouts/Layout.astro';
import { getCollectionEntry } from '@utils/collectionUtils';
import { render } from 'astro:content';

const page = await getCollectionEntry('pages', '/');
const { Content } = await render(page);
---

<Layout title={page.data.title || 'Datum'} description={page.data.description}>
  <section id="content" class="rounded-lg bg-white py-12 shadow-sm">
    <div class="prose lg:prose-xl mx-auto max-w-3xl">
      <Content />
    </div>
  </section>
</Layout>
