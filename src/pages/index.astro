---
import Layout from "../layouts/Layout.astro";
import { getEntry } from "astro:content";

const page = await getEntry("pages", "/");
const Content = page ? (await page.render()).Content : null;
---

<Layout title=`${page.data.title}` description={page.data.description}>
  <section class="py-12">
    <div class="mx-auto max-w-4xl">
      <div class="mb-12 text-center">
        <h1 class="mb-4 font-heading text-5xl font-bold text-gray-900">
          Building the Modern Web
        </h1>

        <p class="mx-auto max-w-2xl text-xl text-gray-600">
          A showcase site built with Astro, MDX, and TailwindCSS.
        </p>
        <div class="mt-8 flex justify-center space-x-4">
          <a href="/about" class="btn btn-primary">Learn More</a>
          <a href="#features" class="btn btn-outline">See Features</a>
        </div>
      </div>
    </div>
  </section>

  <section id="content" class="rounded-lg bg-white py-12 shadow-sm">
    <div class="prose mx-auto max-w-3xl lg:prose-xl">
      <Content />
    </div>
  </section>

  <section id="features" class="py-16">
    <div class="mx-auto max-w-6xl">
      <h2 class="mb-12 text-center font-heading text-3xl font-bold">
        Key Features
      </h2>
      <div class="grid gap-8 md:grid-cols-3">
        <div class="rounded-lg bg-white p-6 shadow-sm">
          <h3 class="mb-3 font-heading text-xl font-bold">Performance First</h3>
          <p class="text-gray-600">
            Lightning-fast page loads with minimal JavaScript, thanks to Astro's
            architecture.
          </p>
        </div>
        <div class="rounded-lg bg-white p-6 shadow-sm">
          <h3 class="mb-3 font-heading text-xl font-bold">MDX Content</h3>
          <p class="text-gray-600">
            Write content in Markdown, enhance it with React components when
            needed.
          </p>
        </div>
        <div class="rounded-lg bg-white p-6 shadow-sm">
          <h3 class="mb-3 font-heading text-xl font-bold">Modern Styling</h3>
          <p class="text-gray-600">
            TailwindCSS provides utility classes for rapid development without
            sacrificing customization.
          </p>
        </div>
      </div>
    </div>
  </section>
</Layout>
