---
import Layout from '../../layouts/Layout.astro';
import { getEntry, render } from 'astro:content';

const openSourceContent = await getEntry('pages', 'open-source');
if (!openSourceContent) {
  return Astro.redirect('/404');
}
const { Content } = await render(openSourceContent);
---

<Layout title={openSourceContent.data.title}>
  <main class="container mx-auto px-4 py-8">
    <h1 class="mb-6 text-4xl font-bold">Open Source</h1>
    <div class="prose max-w-none">
      <p>Discover our commitment to open source and community-driven development.</p>

      <nav class="mt-8">
        <h2 class="mb-4 text-2xl font-semibold">Open Source Initiatives</h2>
        <ul class="space-y-2">
          <li>
            <a href="/open-source/maintainers" class="text-blue-600 hover:text-blue-800"
              >Maintainer Program</a
            >
          </li>
        </ul>
      </nav>
    </div>
    <article class="prose max-w-none">
      <Content />
    </article>
  </main>
</Layout>
