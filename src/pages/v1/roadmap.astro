---
import Layout from '@v1/layouts/Layout.astro';
import Hero from '@v1/components/Hero.astro';
import Footer from '@v1/components/Footer.astro';
import Card from '@v1/components/roadmap/Card.astro';
import OpenNetwork from '@v1/components/home/OpenNetwork.astro';
import type { RoadmapItem } from '@/src/types/roadmap';

const subtitle = 'Roadmap';
const title = 'The Roadmap';
const description =
  "Here's what we're thinking about building next. Vote for your favorites, or request a new feature on GitHub.";

const sampleData: RoadmapItem[] = [
  {
    id: '1',
    title: 'Product tours feature',
    description:
      'Being able to turn session recordings into "Clips" and allow users to highlight the important parts of a recording with the option to export the clip as a video/gif.',
    votes: 12,
    githubUrl: 'https://github.com/datum/datum/issues/123',
    hasVoted: false,
  },
  {
    id: '2',
    title: 'Advanced analytics dashboard',
    description:
      'A comprehensive analytics dashboard that provides detailed insights into network performance, user behavior, and system health with customizable widgets and real-time data visualization.',
    votes: 307,
    githubUrl: 'https://github.com/datum/datum/issues/456',
    hasVoted: true,
  },
  {
    id: '3',
    title: 'Multi-region deployment',
    description:
      'Support for deploying Datum across multiple regions with automatic failover, load balancing, and region-specific configuration management.',
    votes: 89,
    githubUrl: 'https://github.com/datum/datum/issues/789',
    hasVoted: false,
  },
  {
    id: '4',
    title: 'API rate limiting',
    description:
      'Implement intelligent API rate limiting with configurable thresholds, user-specific limits, and automatic throttling to prevent abuse and ensure fair usage.',
    votes: 156,
    githubUrl: 'https://github.com/datum/datum/issues/101',
    hasVoted: false,
  },
];
---

<Layout title={title} description={description} bodyClass="about-page">
  <section class="datum-container">
    <Hero
      class="light"
      iconName="calendar-range"
      title={title}
      description={description}
      subtitle={subtitle}
    />

    <div class="section--block section--block--pad bg-navy dark">
      <div class="roadmap-container">
        {sampleData.map((item) => <Card {...item} />)}
      </div>
    </div>

    <OpenNetwork />

    <Footer />
  </section>
</Layout>
