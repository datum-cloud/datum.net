---
import { Image } from 'astro:assets';

// Import company logos
import AmplifyLogo from '@v1/assets/logos/about/amplify.png';
import CervinLogo from '@v1/assets/logos/about/cervin.png';
import EncodedLogo from '@v1/assets/logos/about/encoded.png';
import PacketLogo from '@v1/assets/logos/about/packet.png';
import SfLogo from '@v1/assets/logos/about/sf.png';
import SoftlayerLogo from '@v1/assets/logos/about/softlayer.png';
import StackpathLogo from '@v1/assets/logos/about/stackpath.png';
import VineLogo from '@v1/assets/logos/about/vine.png';
import VoxelLogo from '@v1/assets/logos/about/voxel.png';
import ZscalerLogo from '@v1/assets/logos/about/zscaler.png';
import Highwinds from '@v1/assets/logos/about/highwinds.png';
---

<section class="bg-lime-green section--block section--block--pad">
  <div class="section--block-inner">
    <!-- Team Header -->
    <div class="mb-16 md:mb-20">
      <div class="flex flex-col gap-8 lg:flex-row lg:items-start lg:justify-between">
        <h2 class="h2-section">The Team</h2>
        <div class="section--block-content-text max-w-2xl text-lg lg:max-w-xl">
          <p>
            We are a group of infrastructure and software nerds who love building for the future. If
            you're interested in working with us, please reach out via our contact page or join us
            on Slack, GitHub, or the platform of your choosing.
          </p>
        </div>
      </div>
    </div>

    <!-- Companies Section -->
    <div class="mb-16 md:mb-20">
      <h3
        class="text-navy/80 font-alliance mb-8 text-sm font-semibold tracking-wider uppercase md:text-base"
      >
        Companies we've helped to build
      </h3>
      <div class="logo-grid logo-grid--3-6">
        <div class="logo-item logo-item--landscape">
          <Image src={PacketLogo} alt="Team logo" class="logo-img logo-img--standard" />
        </div>

        <div class="logo-item logo-item--landscape">
          <Image src={ZscalerLogo} alt="Team logo" class="logo-img logo-img--standard" />
        </div>

        <div class="logo-item logo-item--landscape">
          <Image src={StackpathLogo} alt="Team logo" class="logo-img logo-img--standard" />
        </div>

        <div class="logo-item logo-item--landscape">
          <Image src={SoftlayerLogo} alt="Team logo" class="logo-img logo-img--standard" />
        </div>

        <div class="logo-item logo-item--landscape">
          <Image src={VoxelLogo} alt="Team logo" class="logo-img logo-img--standard" />
        </div>

        <div class="logo-item logo-item--landscape">
          <Image src={Highwinds} alt="Team logo" class="logo-img logo-img--standard" />
        </div>
      </div>
    </div>

    <!-- Investors Section -->
    <div>
      <h3
        class="text-navy/80 font-alliance mb-8 text-sm font-semibold tracking-wider uppercase md:text-base"
      >
        Investors who have trusted us to execute
      </h3>
      <div class="logo-grid logo-grid--3-6">
        <div class="logo-item logo-item--landscape">
          <Image src={AmplifyLogo} alt="Team logo" class="logo-img logo-img--standard" />
        </div>

        <div class="logo-item logo-item--landscape">
          <Image src={EncodedLogo} alt="Team logo" class="logo-img logo-img--standard" />
        </div>

        <div class="logo-item logo-item--landscape">
          <Image src={VineLogo} alt="Team logo" class="logo-img logo-img--standard" />
        </div>

        <div class="logo-item logo-item--landscape">
          <Image src={SfLogo} alt="Team logo" class="logo-img logo-img--standard" />
        </div>

        <div class="logo-item logo-item--landscape">
          <Image src={CervinLogo} alt="Team logo" class="logo-img logo-img--standard" />
        </div>

        <div class="logo-item logo-item--landscape">
          <a href="/contact" class="text-navy/80 hover:text-navy text-base transition-colors">
            Get in touch
          </a>
        </div>
      </div>
    </div>
  </div>
</section>
