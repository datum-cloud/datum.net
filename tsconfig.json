{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "public/pagefind",
    "public/pagefind-blog",
    "**/pagefind/**",
    "**/pagefind-blog/**",
    "tests/**/*",
    "playwright.config.ts"
  ],
  "compilerOptions": {
    "strictNullChecks": true,
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@components/*": ["./src/components/*"],
      "@utils/*": ["./src/utils/*"],
      "@libs/*": ["./src/libs/*"],
      "@plugins/*": ["./src/plugins/*"],
      "@layouts/*": ["./src/layouts/*"],
      "@v1/*": ["./src/v1/*"],
      "@content/*": ["./src/content/*"],
      "@data/*": ["./src/data/*"],
      "@styles/*": ["./src/styles/*"],
      "@assets/*": ["./src/assets/*"]
    },
    "plugins": [
      {
        "name": "@astrojs/ts-plugin"
      }
    ]
  }
}
